<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

  
    <link href="~/Content/side.css" rel="stylesheet" />
</head>
<body background="~/img/Admin/bck.jpg" id="LoginBackground">

    <div class="form-control" id="Logincontainer">
        <h2>Admin </h2>
        <img id="adminimage" src="~/img/Admin/admin.png" />
        @*//Controller ve gideceği method*@
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "login100-form validate-form" }))
        {
            <div class="form-group has-feedback">
                <input class="form-control" name="username" id="input_username" type="text" placeholder="Kullanıcı Adı" value="Adekah" />
                <span class="glyphicon glyphicon-user form-control-feedback" id="user"></span>
            </div>
            <div class="form-group has-feedback">
                <input class="form-control" id="input_pass" name="password" type="password" placeholder="Parola" value="123" />
                <span class="glyphicon glyphicon-lock form-control-feedback glyphicon2 icon" id="lock"></span>

            </div>
            if (ViewBag.errormessage != null)
            {
                <span style="color:red;font-weight:bold">
                    <i class="fa fa-exclamation-triangle"></i>@ViewBag.errormessage
                </span>
            }
            <div>
                <button type="submit" id="btnlogin" class="btn btn-primary">Oturum Aç</button>
            </div>
        }
    </div>


</body>
</html>

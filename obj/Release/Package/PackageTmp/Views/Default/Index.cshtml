
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<section class="hero-area">
    <div class="hero-slides owl-carousel" id="home">



        @{ var counter = 0; var counter2 = 1;}
        @foreach (Seckinkirtasiye.Models.tbl_slider imgs in ViewBag.SliderImage)
        {
            if (counter == 0)
            {
                { counter = 1; }
                <div class="single-hero-slide bg-img" data-slide-number=@string.Concat(counter2) style="background-image:url(/img/@imgs.Slider_image)">
                    @*<img src="~/img/@imgs.Slider_image" style="width:100%;height:850px">*@


                    <div class="container h-100">
                        <div class="row h-100 align-items-center">
                            <div class="col-12">
                                <div class="hero-slides-content">
                                    <h4 data-animation="fadeInUp" data-delay="100ms">@imgs.Slider_image_title</h4>
                                    <h2 data-animation="fadeInUp" data-delay="400ms">@imgs.Slider_image_text</h2>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
            else
            {
                <div class="single-hero-slide bg-img" data-slide-number=@string.Concat(counter2) style="background-image:url(/img/@imgs.Slider_image)">


                    @*<img src="~/img/@imgs.Slider_image" style="width:100%;height:850px">*@

                    <div class="container h-100">
                        <div class="row h-100 align-items-center">
                            <div class="col-12">
                                <div class="hero-slides-content">
                                    <h4 data-animation="fadeInUp" data-delay="100ms">@imgs.Slider_image_title</h4>
                                    <h2 data-animation="fadeInUp" data-delay="400ms">@imgs.Slider_image_text</h2>


                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                counter2 = counter2 + 1;

            }

        }
    </div>
</section>


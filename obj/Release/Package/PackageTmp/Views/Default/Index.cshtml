    </div>
</div>

<!-- ##### Contact Area Start ##### -->
<section class="contact-area" id="contact">
    <div class="container">
        <div class="row">
            <div  style="width: 100%;">
                <div class="contact-content">
                    <div class="row">
                        <!-- Contact Information -->
                        <div style="margin-left: 25%;">
                            <div class="contact-information wow fadeInUp" data-wow-delay="400ms">
                                <div class="section-heading text-left" style="text-align:center">

                                    <h3>İletişim Bilgileri</h3>

                                </div>

                                <div class="single-contact-info d-flex">
                                    <div class="contact-icon mr-15">
                                        <i class="icon-placeholder"></i>
                                    </div>
                                    <p><b>@contact.Adress</b></p>
                                </div>


                                <div class="single-contact-info d-flex">
                                    <div class="contact-icon mr-15">
                                        <i class="icon-telephone-1"></i>
                                    </div>
                                    <p><b style="font-size: 16px;">@contact.Tel</b></p>
                                </div>
                                <div class="single-contact-info d-flex">
                                    <div class="contact-icon mr-15">
                                        <i class="icon-telephone-1"></i>
                                    </div>
                                    <p><b> Cep : @contact.Cep_Tel</b></p>
                                </div>


                                <!-- Single Contact Info -->
                                <div class="single-contact-info d-flex">
                                    <div class="contact-icon mr-15">
                                        <i class="icon-contract"></i>
                                    </div>
                                    <p><b>@contact.Mail</b></p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





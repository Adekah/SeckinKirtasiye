                    @{
                        Seckinkirtasiye.Models.tbl_Contact contact = @ViewBag.Contact;
                        int counter = 0;
                    }

                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="footer-widget mb-100">
                            <div class="widget-title">
                                <h6>GALERİ</h6>
                            </div>
                            <div class="gallery-list d-flex justify-content-between flex-wrap">
                                @foreach (Seckinkirtasiye.Models.tbl_Gallery gallery in ViewBag.GalleryImages)
                                {
                                    counter = counter + 1;
                                    if (counter <= 6)
                                    {
                                        <a href="/img/bg-img/@gallery.image" class="gallery-img" title="@gallery.image_title">
                                            <img src="/img/bg-img/@gallery.image" alt="" style="height: 85px; width: 65px;">

                                        </a>
                                    }
                                    else if (counter > 6)
                                    {
                                        <a href="/img/bg-img/@gallery.image" class="gallery-img" title="@gallery.image_title" style="display:none"></a>
                                    }

                                }

                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-lg-5">
                        <div class="footer-widget mb-100">
                            <div class="widget-title">
                                <h6>İLETİŞİM</h6>
                            </div>
                            <div class="single-contact d-flex mb-30">
                                <i class="icon-placeholder"></i>
                                <p><b>@contact.Adress</b></p>
                            </div>
                            <div class="single-contact d-flex mb-30">
                                <i class="icon-telephone-1"></i>
                                <p> <b>Tel : @contact.Tel </b></p>
                            </div>
                            <div class="single-contact d-flex mb-30">
                                <i class="icon-telephone-1"></i>
                                <p><b>Cep Tel : @contact.Cep_Tel</b></p>
                            </div>
                            <div class="single-contact d-flex">
                                <i class="icon-contract"></i>
                                <p><b>@contact.Mail</b></p>
                            </div>
                        </div>
                    </div>

